[init]
    defaultBranch = main

[user]
    name = {{ .name }}
    email = {{ .email }}
    {{ if .signing_key -}}
    signingKey = {{ .signing_key }}
    {{- end }}

[alias]
    plog = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    vfc = verify-commit
    st = status
    cm = commit -m

[pull]
    rebase = true

[diff]
    guitool = personal

[difftool "personal"]
    cmd = {{ .editor }}

[commit]
    {{ if .signing_key -}}
    gpgsign = true
    {{ else -}}
    gpgsign = false
    {{ end -}}

{{- if and (.signing_key) (eq .signing_format "ssh") }}
[gpg]
    format = "ssh"

[gpg "ssh"]
    program = {{ .signing_ssh_program }}
{{- end }}

[credential]
    helper = store

[credential "https://github.com"]
    helper = !/home/linuxbrew/.linuxbrew/bin/gh auth git-credential

[credential "https://gist.github.com"]
    helper = !/home/linuxbrew/.linuxbrew/bin/gh auth git-credential
