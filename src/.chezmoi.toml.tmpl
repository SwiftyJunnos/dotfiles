{{- $name := promptStringOnce . "name" "What is your name?" "Junnos ï£¿" -}}
{{- $email := promptStringOnce . "email" "What is your email address?" "junnos.dev@gmail.com" -}}
{{- $signingKey := "${HOME}/.ssh/junnos_ed25519" -}}

# macOS: darwin
# ubuntu: linux-ubuntu
{{- $osid := .chezmoi.os -}}
{{- if hasKey .chezmoi.osRelease "id" -}}
    {{- $osid = printf "%s-%s" .chezmoi.os .chezmoi.osRelease.id -}}
{{- end -}}

[data]
    osid = {{ $osid | quote }}

    name = "{{ $name }}"
    email = "{{ $email }}"

    locale = "en_KR.UTF-8"
    timezone = "Asia/Seoul"

    signing_format = "ssh"
    signing_key = "${HOME}/.ssh/junnos_ed25519"

    {{- if or (lookPath "cursor") }}
    editor = "cursor --wait --diff $LOCAL $REMOTE"
    {{- else if lookPath "code" }}
    editor = "code --wait --diff $LOCAL $REMOTE"
    {{- else if lookPath "vim" }}
    editor = "vim"
    {{- else if lookPath "nano" }}
    editor = "nano"
    {{- else }}
    editor = "vi"
    {{- end }}
